pkgname=isync
pkgver=1.2.1
pkgrel=4
pkgdesc="IMAP and MailDir mailbox synchronizer"
arch=('i686' 'x86_64')
url="http://isync.sourceforge.net"
license=('GPL2')
depends=('openssl' 'libsasl')
source=('git://git.code.sf.net/p/isync/isync#branch=1.2')
md5sums=('SKIP')

build() {
  cd $pkgname
  touch $srcdir/$_gitname/ChangeLog
  ./autogen.sh || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}
